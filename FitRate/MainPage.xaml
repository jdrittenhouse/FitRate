<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="FitRate.Mobile.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Welcome to FitRate">
    <ScrollView>
        <Frame HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"
           HasShadow="False"
           BorderColor="Transparent"
           WidthRequest="400">
            <VerticalStackLayout 
          Padding="30"
          Spacing="20"
          HorizontalOptions="Center"
          VerticalOptions="CenterAndExpand">
                <Image Source="FitRateLogo.jpg" 
                       HeightRequest="250"
                       HorizontalOptions="Center"/>

                <Label Text="Welcome to FitRate" 
               FontSize="32" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center" />
                <Label Text="Your fitness journey starts here." 
               FontSize="18" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center" />
                <Button Text="Sign In" 
                HorizontalOptions="FillAndExpand"
                Clicked="OnSignInClicked" />
                <Button Text="Sign Up" 
                HorizontalOptions="FillAndExpand"
                Clicked="OnSignUpClicked" />
                <Button Text="Visit Our Website" 
                HorizontalOptions="FillAndExpand"
                Clicked="OnVisitWebsiteClicked" />
            </VerticalStackLayout>
        </Frame>
    </ScrollView>
</ContentPage>
