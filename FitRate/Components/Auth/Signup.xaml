<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="FitRate.Mobile.Components.Auth.Signup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Sign Up">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Sign Up" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

            <Button Text="Sign Up" Clicked="OnSignUpClicked" />

            <Label x:Name="StatusLabel" TextColor="Red" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
