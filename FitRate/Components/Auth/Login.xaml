<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="FitRate.Mobile.Components.Auth.Login"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Login" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <Button Text="Login" Clicked="OnLoginClicked" />

            <Label x:Name="StatusLabel" TextColor="Red" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
